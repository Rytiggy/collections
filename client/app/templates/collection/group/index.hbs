<div class="coll-breadcrumb">
    <div class="container">
        {{bread-crumbs tagName="ol" outputStyle="bootstrap" linkable=true}}
    </div>
</div>
<div class="coll-group-header">
    <div class="container">
        <h2>Group "{{model.title}}"</h2>
        <div>
            <button class="btn btn-danger" {{action toggleProperty 'showDeleteConfirmation'}}>Delete group</button>
        </div>
    </div>
</div>
<div class="coll-items">
    <div class="container">
        <div class="row">
            <div class="col-xs-6">
                {{#if organizeMode}}
                    <button class="btn btn-danger" {{action 'deleteSelected'}}>Delete selected </button>
                {{/if}}
            </div>
            <div class="col-xs-6 text-right">
                <button class="btn btn-info" {{action toggleProperty 'organizeMode'}}>Organize Items </button>
            </div>
        </div>
        <div class="row">
            {{#each model.items as |item|}}
                {{collection-item item=item parent='group' organizeMode=organizeMode class="col-sm-6 col-lg-4"}}
            {{/each}}
        </div>
    </div>
</div>

{{#if showDeleteConfirmation}}
<div class="modal fade in" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" aria-label="Close" {{action toggleProperty 'showDeleteConfirmation'}}><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Delete this group?</h4>
      </div>
      <div class="modal-body">
        <p> Are you sure you want to delete this group? </p>
        <p>You can delete the group and keep items. This option will put the items back into the collection.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" {{action toggleProperty 'showDeleteConfirmation'}}>Close</button>
        <button type="button" class="btn btn-warning" {{action 'deletePartial'}}>Delete Group and keep items</button>
        <button type="button" class="btn btn-danger" {{action 'deleteFull'}}>Delete all</button>

      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<div class="modal-backdrop fade in"></div>
{{/if}}
