<div class="landing-title-container p-xl" style="{{containerStyle}}">
    <div class="container">
        <div class="row">
            <div class="text-center m-t-lg col-xs-12">
                <div class="preprint-brand"></div>
                {{#if layout.settings.useLogo}}
                    <div class="coll-hero-logo" style="{{logoStyle}}" aria-role="img"
                         aria-label="{{branding.logo.label}}"></div>
                {{else if layout.title}}
                    <h2>{{layout.title}}</h2>
                {{else}}
                    <h2>{{model.title}}</h2>
                {{/if}}
                {{#if layout.tagline}}
                    <p class="lead">{{layout.tagline}}</p>
                {{else}}
                    <p class="lead">{{model.description}}</p>
                {{/if}}
            </div>
        </div>
    </div>
</div>
