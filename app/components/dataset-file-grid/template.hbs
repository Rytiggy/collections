<style>
    .file-grid-container {
        padding-top: 50px;
        max-height:600px;
        overflow: auto;
    }

    .item-thumbnail {
        width: 100%;
        height: auto;
    }

    .clamp {
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        height: 40px;
    }
    .panel {
        box-shadow: 0px 2px 3px #888888;
    }
    .item-panel a {
        color: inherit;
    }
    .item-panel p small {
        color: #666;
    }
</style>
<div class="file-grid-container container">
    <h2 class="text-center p-b-xl">Browse files</h2>
    <div class="row">
        {{#each (await model.items) as |item|}}
            <div class="col-md-3 col-sm-3 col-xs-6">
                <div class="panel panel-default item-panel">
                    <div class="">
                        {{#link-to 'collection.item' model.id item.id}}<img class="item-thumbnail" src="http://placehold.it/250x150"/>{{/link-to}}
                    </div>
                    <div class="panel-body">
                            <span class="clamp">{{#link-to 'collection.item' model.id item.id}}{{item.title}}{{/link-to}}</span>
                        <a href="https://staging.osf.io/{{await item.createdBy.username}}"><p><small>{{await item.createdBy.fullName}}</small></p></a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>