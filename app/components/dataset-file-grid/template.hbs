<!-- dataset-file-grid -->
{{#if model.items}}
<div class="file-grid-container container">
    <h2 class="text-center p-b-xl">Browse files</h2>
    <div class="row">
        {{#each pagedContent as |item|}}
            <div class=" col-lg-2 col-md-3 col-sm-3 col-xs-6">
                <div class="panel panel-default item-panel">
                        {{#link-to 'collections.collection.item' model.id item.id}}<img class="item-thumbnail" src="/img/placeholder.png"/>{{/link-to}}
                    <div class="panel-body">
                            <span class="clamp">{{#link-to 'collections.collection.item' model.id item.id}}{{item.title}}{{/link-to}}</span>
                        <a href="https://staging.osf.io/{{await item.createdBy.username}}"><p><small>{{await item.createdBy.firstName}} {{await item.createdBy.lastName}}</small></p></a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
    {{#if (not-eq totalPages 1)}}
    <div class="row text-center">
        <div class="col-xs-12">
            {{page-numbers content=pagedContent}}
        </div>
    </div>
    {{/if}}
</div>
{{else}}
    <p class="p-lg text-center"><em>The file grid cannot be displayed. To display the grid, add some items to this collection.</em></p>
{{/if}}