<div class="coll-breadcrumb">
    <div class="container">
        {{bread-crumbs tagName="ol" outputStyle="bootstrap" linkable=true}}
    </div>
</div>
<div class="coll-item-navigation">
    <div class="container">
        <div class="row">
            <div class="col-xs-6 text-left">  {{#link-to 'collection.group.item' item.previousId}}<i class="fa fa-chevron-left"></i> Previous {{/link-to}}</div>
            <div class="col-xs-6 text-right">{{#link-to 'collection.group.item' item.nextId}}Next <i class="fa fa-chevron-right"></i> {{/link-to}}</div>
        </div>
    </div>
</div>
<div class="coll-item-page">
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <h2> {{item.title}}</h2>
                <p> {{item.description}}</p>
                <div>
                    {{#each item.tags as |tag|}}
                        <span class="coll-item-tag">{{tag}}</span>
                    {{/each}}
                </div>
                <div>Status: {{item.status}}</div>
                <div class="m-t-xl">
                    <button class="btn btn-default">Remove from collection </button>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="coll-mock-mfr">

                </div>
            </div>
        </div>
    </div>
</div>
