{{outlet}}
<div class="coll-banner text-center">
    <div class="container">
        <h1> OSF Collections </h1>
        <p class="lead">Integrate your research interests into groups</p>
    </div>
</div>
<div class="coll-add-layer">
    <div class="container">
        <h3> Start a collection </h3>
        <div class="row">
            <div class="col-sm-9"><input class="form-control" type="text" placeholder="Enter collection name"> </div>
            <div class="col-sm-3"><button class="btn btn-primary">Continue </button></div>
        </div>
    </div>
</div>
<div class="container">
    <div class="coll-toolbar row">
        <div class="col-xs-6"><h2> All collections</h2></div>
        <div class="col-xs-6">
            <div class="pull-right">{{input value=filterText key-up='filter' placeholder="Filter"}}  {{model.length}} results </div>
        </div>
        <!-- <input type=text placeholder="Filter collections" onkeyup={{action 'filter'}}> -->
    </div>
    <div class="coll-group">
        {{#each model as |item|}}
            <div class="coll-single">
                {{#link-to "index.collection" item.id class="btn btn-info pull-right"}}View{{/link-to}}
                <h3>{{#link-to "index.collection" item.id}}{{item.title}}{{/link-to}}</h3>
                <p>{{item.description}}</p>
                <div>
                    {{#each item.tags as |tag|}}
                        <span class="coll-item-tag">{{tag}}</span>
                    {{/each}}
                </div>
            </div>
        {{/each}}
    </div>
</div>
