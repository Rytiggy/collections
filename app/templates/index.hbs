{{outlet}}
<div class="coll-banner text-center">
    <div class="container">
        <h1 class="f-w-lg"> OSF Collections </h1>
        <p class="lead f-w-md">Integrate your research interests into groups</p>
        {{#if session.isAuthenticated}}
            {{#link-to 'create' class="btn btn-success btn-lg m-t-lg"}}Start a collection {{/link-to}}
        {{/if}}
    </div>
</div>
<div class="container">
    <div class="coll-toolbar row">
        <div class="col-xs-12 text-center"><h2>Newest collections</h2></div>
    </div>
    <div class="row">
    <div class="">
        {{#each model as |item|}}
            <div class="col-xl-4 col-lg-6 col-md-12">
            <div class="coll-single">
                {{#link-to "collection" item.id class="btn btn-info pull-right"}}<span {{action 'clearFilter'}}>View</span>{{/link-to}}
                <h3>{{#link-to "collection" item.id}}<span {{action 'clearFilter'}}>{{item.title}}</span>{{/link-to}}</h3>
                <p>{{item.description}}</p>
                {{#if item.tags}}
                    <div>Tags: {{item.tags}}</div>
                {{/if}}
                <div class="text-muted">Created on {{moment-format item.dateCreated "MMMM DD, YYYY"}} </div>
            </div>
            </div>
        {{/each}}
    </div>

        <div class="text-center">
            {{#if showLoadMore}}
                {{#if loadingMore}}
                    <i class="fa fa-circle-o-notch fa-spin fa-3x fa-fw text-muted m-t-md"></i>
                {{else}}
                    <button class="btn btn-default" {{action 'loadMore'}}> Load more </button>
                {{/if}}
            {{/if}}
        </div>
    </div>
</div>
