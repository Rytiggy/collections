{{outlet}}
{{nav-bar}}
<section class="coll-banner text-center">
    <h1 class="f-w-lg"> OSF Collections </h1>
    <p class="lead f-w-md">Organize your research interests in a way that makes sense</p>
    {{#if session.isAuthenticated}}
        {{#link-to 'create' class="btn btn-success btn-lg m-t-lg"}}Start a collection {{/link-to}}
    {{/if}}
</section>

<h2 class="text-center">Collection Types</h2>

<div class="cards">

    {{#link-to "collections" (query-params kind="meeting") class="card"}}<h3>Meetings</h3>{{/link-to}}
    {{#link-to "collections" (query-params kind="dataset") class="card"}}<h3>Datasets</h3>{{/link-to}}

</div>
<div>
<h2 class="text-center">Newest collections</h2>
<div class="cards">
    {{#each collections as |collection|}}
        {{collection-detail collection=collection}}
    {{/each}}
</div>

<div class="text-center">
    {{#if showLoadMore}}
        {{#if loadingMore}}
            <i class="fa fa-circle-o-notch fa-spin fa-3x fa-fw text-muted m-t-md"></i>
        {{else}}
            <button class="btn btn-default" {{action 'loadMore'}}> Load more</button>
        {{/if}}
    {{/if}}
</div>
</div>
